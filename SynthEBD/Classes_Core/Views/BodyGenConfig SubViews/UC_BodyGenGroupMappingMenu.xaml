<UserControl x:Class="SynthEBD.UC_BodyGenGroupMappingMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthEBD"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ItemsControl ItemsSource="{Binding RacialTemplateGroupMap}" >
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:VM_BodyGenRacialMapping}">
                    <local:UC_BodyGenRacialMapping Background="Black" BorderThickness="1" BorderBrush="Teal" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
